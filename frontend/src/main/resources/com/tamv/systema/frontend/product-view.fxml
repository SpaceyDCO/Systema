<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tamv.systema.frontend.ProductViewController">
   <children>
      <HBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TableView fx:id="productTable" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Name" />
                  <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                  <TableColumn fx:id="priceColumn" prefWidth="90.0" text="Price" />
                  <TableColumn fx:id="categoryColumn" prefWidth="140.0" text="Category" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <VBox prefWidth="100.0" spacing="10.0">
                <children>
                    <Button fx:id="newButton" maxWidth="1.7976931348623157E308" onAction="#handleNewProduct" text="New...">
                        <font>
                            <Font name="Georgia" size="12.0" />
                        </font></Button>
                    <Button fx:id="editButton" maxWidth="1.7976931348623157E308" onAction="#handleEdit" text="Edit...">
                        <font>
                            <Font name="Georgia" size="12.0" />
                        </font></Button>
                    <Button fx:id="deleteButton" maxWidth="1.7976931348623157E308" onAction="#handleDelete" text="Delete">
                        <font>
                            <Font name="Georgia" size="12.0" />
                        </font></Button>
                </children></VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
