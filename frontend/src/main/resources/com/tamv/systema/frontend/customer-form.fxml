<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tamv.systema.frontend.CustomerFormController">
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Full Name:">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font></Label>
            <Label text="Email:" GridPane.rowIndex="1">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font>
            </Label>
            <Label text="Phone Number" GridPane.rowIndex="2">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" GridPane.columnIndex="1">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font>
            </TextField>
         </children>
      </GridPane>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="Save">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font></Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font></Button>
         </children></HBox>
      <Label fx:id="errorLabel" textAlignment="CENTER" textFill="#750000">
         <font>
            <Font name="Georgia" size="18.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
